
.good-box{
  padding: 20rpx 0 110rpx;
}

.good-item{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  position: relative;
}

.good-item image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}

.good-info{
  flex: 1;
  position: relative;
}

.edit{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.good-name{
  color: #34BFA3;
  font-size: 30rpx;
  font-weight: bold;
}

.good-tip{
  color: #666;
  font-size: 28rpx;
  margin: 16rpx 0;
}

.space-info{
  display: flex;
  justify-content: space-between;
  color: #999;
}

.remove{
  width: 64px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f44;
  color: #fff;
}

.add-box{
  position: fixed;
  bottom: 150rpx;
  right: 30rpx;
  z-index: 999;
}
