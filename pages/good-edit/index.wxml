    type="digit"
    label="零售总价(元)"
    placeholder="请输入零售总价"
    bind:input="fieldChange"
    data-key="sellAll"
  /> -->
  <van-field
    value="{{ desc }}"
    label="商品描述"
    placeholder="请输入商品描述"
    border="{{ false }}"
    bind:input="fieldChange"
    data-key="desc"
  />
  <van-field
    value="{{ origin }}"
    clearable
    input-align="right"
    label="商品来源"
    placeholder="请输入商品来源"
    bind:input="fieldChange"
    data-key="origin"
  />
  
  <!-- <cover-view class="saveBtn" bindtap="save">保存</cover-view> -->
