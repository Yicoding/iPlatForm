    input-align="right"
    type="digit"
    label="进货总价(元)"
    placeholder="请输入进货总价"
    bind:input="fieldChange"
    data-key="buyAll"
  /> -->
  <van-field
    value="{{ midSingle }}"
    required
    input-align="right"
    clearable
    type="digit"
    label="批发单价(元)"
    placeholder="请输入批发单价"
    bind:input="fieldChange"
    data-key="midSingle"
  />
  <!-- <van-field
    value="{{ midAll }}"
    required
    input-align="right"
    clearable
    type="digit"
    label="批发总价(元)"
    placeholder="请输入批发总价"
    bind:input="fieldChange"
    data-key="midAll"
  /> -->
  <van-field
    value="{{ sellSingle }}"
    required
    input-align="right"
    clearable
    type="digit"
    label="零售单价(元)"
    placeholder="请输入零售单价"
    bind:input="fieldChange"
    data-key="sellSingle"
  />
  <!-- <van-field
    value="{{ sellAll }}"
    required
