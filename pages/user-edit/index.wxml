<wxs src="../../utils/tools.wxs" module="tools" />

<view class="food {{isIpx ? 'foodX' : ''}}">
  <image class="coverImg" mode="aspectFill" src="{{coverImg}}" />
  <view class="editBtn" catchtap="uploadCover">修改头像</view>
  <van-field
    value="{{ name }}"
    required
    clearable
    label="用户名"
    input-align="right"
    placeholder="请输入用户名"
    bind:input="fieldChange"
    data-key="name"
  />
  <van-field
    value="{{ buySingle }}"
    required
    clearable
    input-align="right"
    type="digit"
    label="手机号"
    placeholder="请输入手机号"
    bind:input="fieldChange"
    data-key="buySingle"
  />
  <van-field
    value="{{ buyAll }}"
    required
    clearable
    input-align="right"
    label="密码"
    placeholder="请输入密码"
    bind:input="fieldChange"
    data-key="buyAll"
  />
  <picker bindchange="bindPickerChange" value="{{sexIndex}}" range="{{sexOption}}" range-key="text">
    <van-cell title="性别" value="{{tools.sexTitle(sex, sexOption)}}" />
  </picker>
  <van-field
    value="{{ midSingle }}"
    input-align="right"
    clearable
    type="digit"
    label="年龄"
    placeholder="请输入年龄"
    bind:input="fieldChange"
    data-key="midSingle"
  />
  <van-field
    value="{{ desc }}"
    label="个性签名"
    type="textarea"
    placeholder="请输入个性签名"
    autosize
    border="{{ false }}"
    bind:input="fieldChange"
    data-key="desc"
  />
  
  <cover-view class="saveBtn {{isIpx ? 'footX' : ''}}" bindtap="save">保存</cover-view>
</view>
<wux-select id="wux-select1" />
<wux-select id="wux-select2" />