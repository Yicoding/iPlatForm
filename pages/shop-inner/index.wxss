
.good-box{
  padding: 20rpx 0 110rpx;
}

.good-box-iphonex{
  padding-bottom: 180rpx;
}

.good-item{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  position: relative;
}

.remove-mask{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, .5);
  z-index: 999;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 70rpx;
}

.remove-txt{
  color: #fff;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .4);
  transform: rotate(-20deg);
}


.good-item image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}

.good-info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}

.good-name{
  color: #666;
  font-size: 30rpx;
  font-weight: bold;
}

.good-tip{
  color: #333;
  font-size: 28rpx;
  margin: 10rpx 0;
}

.good-tip text{
  color: #666;
}

.space-info{
  display: flex;
  justify-content: space-between;
}

.space-price{
  color: #e4393c;
  font-size: 32rpx;
}
.red{
  color: #e4393c !important;
}

.space-price text:first-of-type{
  font-size: 22rpx;
  color: #333;
}

.clear-btn{
  color: #fff;
  font-size: 26rpx;
  background: coral;
  padding: 15rpx 20rpx;
  border-radius: 5rpx;
  margin-left: 20rpx;
}

.btn-empty{
  opacity: .7;
}

.remove{
  width: 64px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f44;
  color: #fff;
}

.van-submit-bar__bar{
  height: auto !important;
}


