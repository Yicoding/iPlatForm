page{
  padding: 40rpx 0;
  box-sizing: border-box;
}

.card{
  padding: 60rpx 40rpx;
}

.menu{
  background: linear-gradient(120deg, rgb(55, 54, 54), rgb(91, 90, 89) 30%, rgb(20, 20, 20));
}

.unit{
  background: linear-gradient(120deg, rgb(255, 241, 219), rgb(252, 236, 207) 30%, rgb(223, 175, 108));
}

.hobby {
  background: linear-gradient(120deg, rgb(214, 235, 255), rgb(219, 234, 251) 30%, rgb(91, 128, 181));
}

.title{
  display: flex;
  align-items: center;
  color: rgb(255, 221, 159);
}

.title-hobby {
  color: rgb(64, 89, 128) !important;
}

.title-unit {
  color: rgb(124, 81, 5) !important;
}

.icon{
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.icon-content,
.icon-content-unit{
  width: 80rpx;
  height: 80rpx;
  background: rgb(55, 54, 54);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.icon-content-unit{
  background: #488ED2 !important;
}

.name{
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 30rpx;
  flex: 1;
}

.txt{
  color: rgb(255, 221, 159);
  font-size: 30rpx;
  text-align: right;
  margin-top: 100rpx;
}
