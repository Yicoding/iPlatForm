.empty-show{
    position: fixed;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #999;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 2000;
}

.empty-show image{
    width: 300rpx;
    height: 241.16rpx;
    display: block;
    margin: 0 auto 20rpx;
}

.empty-show text{
    margin-bottom: 20rpx;
}